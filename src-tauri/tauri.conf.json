{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ToN-Simple-Save-Tool",
  "version": "0.1.6",
  "identifier": "com.tommyz7.tsst",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ToN Simple Save Tool",
        "width": 1000,
        "height": 680,
        "visible": false,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "externalBin": ["binaries/vr-overlay"],
    "resources": {
      "binaries/openvr_api.dll": "./"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZCMUY5MUMwQTVBRTZERUQKUldUdGJhNmx3SkVmYTg3NFRoR3R1enpQcFdvT01wQitFUHBqdW9ZQkdwdXJuUnBEbjZKLzJpZTEK",
      "endpoints": [
        "https://github.com/TommyZ-7/ToN-Simple-Save-Tool/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
